<testcase>
<info>
<keywords>
SIEVE
redirect_url
</keywords>
</info>

#
# Server-side
<reply>
<servercmd>
REPLY welcome \"SASL\" \"PLAIN\"\r\nOK
REPLY AUTHENTICATE OK \"Logged in\"
REPLY GETSCRIPT NO (REFERRAL \"sieve://%HOSTIP:%SIEVEPORT\")
COUNT GETSCRIPT 1
</servercmd>
<data>
require "fileinto";
if header :comparator "i;ascii-casemap" :contains "X-Spam-Level" "*****"  {
    fileinto "Junk";
    stop;
}
</data>
</reply>

#
# Client-side
<client>
<server>
sieve
</server>
 <name>
SIEVE following to untrusted referral
 </name>
 <command>
'sieve://%HOSTIP:%SIEVEPORT/script%TESTNUMBER' -u user:secret --location
</command>
</client>

#
# Verify data after the test has been "shot"
<verify>
<protocol>
AUTHENTICATE "PLAIN" "%b64[%00user%00secret]b64%"
CAPABILITY
GETSCRIPT "script%TESTNUMBER"
LOGOUT
GETSCRIPT "script%TESTNUMBER"
LOGOUT
</protocol>
</verify>
</testcase>
