<?xml version="1.0" encoding="US-ASCII"?>
<testcase>
<info>
<keywords>
SIEVE
PUTSCRIPT
</keywords>
</info>

#
# Client-side
<client>
<server>
sieve
</server>
 <name>
SIEVE upload script with errors
 </name>
 <command>
sieve://%HOSTIP:%SIEVEPORT/script%TESTNUMBER --upload-file %LOGDIR/test%TESTNUMBER.txt
</command>
# We create this file before the command is invoked!
<file name="%LOGDIR/test%TESTNUMBER.txt">
@STATUS@NO@
@RESPONSE@This script is meaningless\nDon't rely on it !\n@
foo-
This is a moo-
bar
</file>
</client>

#
# Verify data after the test has been "shot"
<verify>
<protocol>
PUTSCRIPT "script%TESTNUMBER" {96+}%CR
@STATUS@NO@
@RESPONSE@This script is meaningless\nDon't rely on it !\n@
foo-
This is a moo-
bar
%CR
LOGOUT%CR
</protocol>
<stdout>
This script is meaningless
Don't rely on it !
</stdout>
<errorcode>
25
</errorcode>
</verify>
</testcase>
