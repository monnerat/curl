<testcase>
<info>
<keywords>
SIEVE
SASL
SASL AUTH LOGIN
</keywords>
</info>

#
# Server-side
<reply>
<servercmd>
REPLY welcome \"SASL\" \"LOGIN\"\r\nOK
REPLY AUTHENTICATE \"%b64[Password:]b64%\"
REPLY %b64[secret]b64% OK \"Logged in\"
</servercmd>
<data>
require "fileinto";
if header :comparator "i;ascii-casemap" :contains "X-Spam-Level" "*****"  {
    fileinto "Junk";
    stop;
}
</data>
</reply>

#
# Client-side
<client>
<server>
sieve
</server>
 <name>
SIEVE login authentication
 </name>
 <command>
sieve://%HOSTIP:%SIEVEPORT/script%TESTNUMBER -u user:secret
</command>
</client>

#
# Verify data after the test has been "shot"
<verify>
<protocol>
AUTHENTICATE "LOGIN" "%b64[user]b64%"
"%b64[secret]b64%"
CAPABILITY
GETSCRIPT "script%TESTNUMBER"
LOGOUT
</protocol>
</verify>
</testcase>
