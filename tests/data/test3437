# Verify data after the test has been "shot"
<verify>
<protocol>
AUTHENTICATE "OAUTHBEARER" "%b64[n,a=user,%01host=127.0.0.1%01port=%SIEVEPORT%01auth=Bearer mF_9.B5f-4.1JqM%01%01]b64%"
CAPABILITY
GETSCRIPT "script%TESTNUMBER"
LOGOUT
</protocol>
</verify>
</testcase>
